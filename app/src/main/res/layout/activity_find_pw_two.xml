<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_20232b">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_37"
            android:layout_marginTop="@dimen/dp_28"
            android:orientation="vertical">

            <TextView
                style="@style/textStyle_d0a670_37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_english" />

            <TextView
                style="@style/textStyle_d0a670_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/find_pw" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_login"
            style="@style/textStyle_d0a670_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_32"
            android:ems="1"
            android:text="@string/login" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_34"
        android:layout_marginTop="100dp">


        <EditText
            android:id="@+id/et_phone"
            style="@style/textStyle_d0a670_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/new_pw"
            android:inputType="number"
            android:maxLength="11"
            android:textColorHint="@color/color_d0a670" />

        <View
            style="@style/divider_d0a670_1"
            android:layout_below="@+id/et_phone"
            android:layout_marginTop="@dimen/dp_11" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_34"
        android:layout_marginTop="39dp">


        <EditText
            android:id="@+id/et_code"
            style="@style/textStyle_d0a670_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_send_code"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/message_code"
            android:textColorHint="@color/color_d0a670" />

        <View
            style="@style/divider_d0a670_1"
            android:layout_below="@+id/et_code"
            android:layout_marginRight="80dp"
            android:layout_marginTop="@dimen/dp_11" />

        <TextView
            android:id="@+id/tv_send_code"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_d0a670_90"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/color_ffffff"
            android:text="@string/send_message_code" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_34"
        android:layout_marginTop="39dp">


        <EditText
            android:id="@+id/et_pw"
            style="@style/textStyle_d0a670_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/again_new_pw"
            android:inputType="textPassword"
            android:textColorHint="@color/color_d0a670" />

        <View
            style="@style/divider_d0a670_1"
            android:layout_below="@+id/et_pw"
            android:layout_marginTop="@dimen/dp_11" />
    </RelativeLayout>

    <TextView
        android:id="@+id/go_register"
        style="@style/textStyle_ffffff_16"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_100"
        android:background="@drawable/bg_d0a670_90"
        android:gravity="center"
        android:text="@string/confirm" />
</LinearLayout>