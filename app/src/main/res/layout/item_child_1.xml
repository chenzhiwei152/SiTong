<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/child"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/album_dp_10"
    android:layout_marginTop="@dimen/album_dp_10"
    android:tag="child_1">

    <com.sevenstringedzithers.sitong.view.TextViewVertical
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:v_textSize="12sp"
        app:v_textColor="@color/color_20232b"
        app:v_start="right" />

    <ImageView
        android:layout_marginLeft="@dimen/album_sp_20"
        android:id="@+id/android"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:tag="child image" />

    <!--<include-->
    <!--layout="@layout/item_child"/>-->

</LinearLayout>