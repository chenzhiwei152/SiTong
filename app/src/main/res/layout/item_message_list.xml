<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toLeftOf="@+id/tv_get_reward"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/textStyle_20232b_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="练琴时长超过20个小时，奖励琴徽6个！" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/textStyle_9920232b_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="2018:40" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_get_reward"
        style="@style/textStyle_d0a670_16"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/bg_d0a670_ring"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="领" />

    <View
        style="@style/divider_d0a670_1"
        android:layout_alignParentBottom="true"
       />
</RelativeLayout>