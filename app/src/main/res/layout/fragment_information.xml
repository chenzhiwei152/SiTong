                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/iv_phone"
                android:layout_toRightOf="@+id/tv_phone"
                android:gravity="right"
                android:text=""
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_exp" />
        </RelativeLayout>

        <View
            style="@style/divider_d0a670_1"
            android:layout_marginLeft="@dimen/dp_30" />

        <RelativeLayout
            android:id="@+id/rl_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:paddingTop="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_address"
                style="@style/textStyle_20232b_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="地址"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_address_content"
                style="@style/textStyle_d0a670_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/iv_address"
                android:layout_toRightOf="@+id/tv_address"
