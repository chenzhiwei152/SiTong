<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dp_40"
    android:layout_marginRight="@dimen/dp_40"
    android:layout_gravity="center"
    android:background="@color/color_ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_left"
            style="@style/textStyle_d0a670_14"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ems="1" />

        <View
            android:id="@+id/vv_divider_left"
            style="@style/divider_d0a670_1_vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/tv_left" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/vv_divider_right"
            android:layout_toRightOf="@+id/vv_divider_left"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="wrap_content"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/tv_en_title"
                style="@style/textStyle_20232b_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="12M" />

            <com.xw.repo.BubbleSeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/tv_end_time"
                android:layout_toRightOf="@+id/tv_start_time"
                app:bsb_bubble_color="@color/color_d0a670"
                app:bsb_bubble_text_color="@color/color_ffffff"
                app:bsb_max="100"
                app:bsb_min="0"
                app:bsb_progress="0"
                app:bsb_second_track_color="@color/color_d0a670"
                app:bsb_track_color="@color/color_d0a670" />

        </LinearLayout>

        <View
            android:id="@+id/vv_divider_right"
            style="@style/divider_d0a670_1_vertical"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_toLeftOf="@+id/tv_right" />

        <TextView
            android:id="@+id/tv_right"
            style="@style/textStyle_d0a670_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ems="1" />
    </RelativeLayout>

</RelativeLayout>