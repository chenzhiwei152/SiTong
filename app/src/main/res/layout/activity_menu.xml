<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_ffffff"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_100"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_menu_top" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/color_20232b"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_close"
            style="@style/textStyle_d0a670_24"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_29"
            android:layout_weight="0.5"
            android:gravity="right"
            android:text="X" />

        <ImageView
            android:id="@+id/iv_qin"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_menu_qin" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_menu_search" />

        <ImageView
            android:id="@+id/iv_me"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_menu_me" />

        <ImageView
            android:id="@+id/iv_story"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_menu_story" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>