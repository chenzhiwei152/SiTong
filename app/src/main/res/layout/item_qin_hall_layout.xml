<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="42dp"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginRight="42dp"
    android:layout_marginBottom="@dimen/dp_15"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="172dp"
        android:layout_height="172dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:layout_toLeftOf="@+id/tv_title"
        android:src="@mipmap/ic_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="132dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_20"
        android:gravity="top"
        android:orientation="horizontal">

        <com.sevenstringedzithers.sitong.view.PlumbTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/vv_divider"
            app:textColor="@color/color_20232b"
            app:textSize="16sp" />

        <View
            android:id="@+id/vv_divider"
            style="@style/divider_d0a670_1_vertical"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/tv_city" />

        <com.sevenstringedzithers.sitong.view.PlumbTextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/vv_divider"
            app:textColor="@color/color_d0a670"
            app:textSize="13sp" />

    </LinearLayout>

</LinearLayout>