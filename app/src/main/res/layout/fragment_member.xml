<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:paddingTop="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_name"
                style="@style/textStyle_20232b_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="购买时间段会员"
                android:textSize="16sp" />

            <TextView
                style="@style/textStyle_d0a670_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/iv_name"
                android:layout_toRightOf="@+id/tv_name"
                android:gravity="right"
                android:text=""
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_exp" />
        </RelativeLayout>

        <View
            style="@style/divider_d0a670_1"
            android:layout_marginLeft="@dimen/dp_30" />


        <RelativeLayout
            android:id="@+id/rl_music_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:paddingTop="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_email"
                style="@style/textStyle_20232b_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="购买喜欢的曲目"
                android:textSize="16sp" />

            <TextView
                style="@style/textStyle_d0a670_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/iv_email"
                android:layout_toRightOf="@+id/tv_email"
                android:gravity="right"
                android:text=""
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_exp" />
        </RelativeLayout>

        <View
            style="@style/divider_d0a670_1"
            android:layout_marginLeft="@dimen/dp_30" />
    </LinearLayout>
</ScrollView>