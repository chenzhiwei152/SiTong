<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="FullScreenTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomerToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="elevation">0dp</item>
        <item name="titleMarginTop">0dp</item>
    </style>
    <!--全屏-->
    <style name="FullScreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--全屏加透明-->
    <style name="TranslucentFullScreenTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@color/albumTransparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- 防止欢迎页白屏或者黑屏，设置图片 -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/layout_list_start_pic</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textStyle_20232b_20">
        <item name="android:textSize">20sp</item>
        <item name="android:color">@color/color_20232b</item>
    </style>

    <style name="textStyle_d0a670_37">
        <item name="android:textSize">37sp</item>
        <item name="android:color">@color/color_d0a670</item>
    </style>

    <style name="textStyle_d0a670_24">
        <item name="android:textSize">24sp</item>
        <item name="android:color">@color/color_d0a670</item>
    </style>
</resources>
